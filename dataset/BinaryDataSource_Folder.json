			"type": "LinkedServiceReference"
		},
		"parameters": {
			"Container": {
				"type": "String"
			},
			"Directory": {
				"type": "String"
			}
		},
		"annotations": [],
		"type": "Binary",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"folderPath": {
					"value": "@{dataset().Directory}",
